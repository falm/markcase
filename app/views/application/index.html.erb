<div id="login">

  <%= form_tag sessions_path, class: "form-signin modal fade", id: "login-Modal" do %> 
   <a class="close" data-dismiss="modal">×</a>
    <h2 class="form-signin-heading">登陆到MarkCase</h2>
    <div class="control-group">
    	<div class="controls">
        <%= text_field_tag  :email, params[:email], class: "input-block-level focused", 
        placeholder: "邮箱地址", "data-validation-email-message" => "邮箱格式不正确！" %>
       	 <p class=" help-block"></p>
			</div>
		</div>
    <div class="control-group">
	    <div class="controls">
        <p class=" help-block"></p>
        <%= password_field_tag :password, params[:password], class: "input-block-level", 
        placeholder: "密码", required: nil,  "data-validation-required-message" => "不能空"%>
      </div>
    </div>
    <%= submit_tag  "登录", class: "btn btn-primary pull-left" %>
    <%= link_to "忘记密码？", sessions_path, class: "btn btn-small pull-right" %>
  <% end %>
</div>

<div id="register">
		
      <%= form_tag users_path, class: "form-signin modal fade", id: "register-Modal" do %>
      <a class="close" data-dismiss="modal">×</a>
        <h2 class="form-signin-heading">注册</h2>
        <%= text_field_tag :username, params[:username], class: "input-block-level", placeholder: "用户名" %>
        <p class="help-block"></p>
        <div class="control-group">
        	<div class="controls">
       		 <%= text_field_tag :email, params[:email], class: "input-block-level", placeholder: "邮箱地址", "data-validation-email-message" => "邮箱格式不正确！" %>
        		<p class="help-block"></p>
        	</div>
				</div>
        <div class="control-group">
        	<div class="controls">        
      		  <%= password_field_tag :password, params[:password], class: "input-block-level", placeholder: "密码", minLength: "6", name: "password", "data-validation-minlength-message" => "密码必须大于6个字符" %>
     			  <p class="help-block"></p>
        	</div>
         </div>
        <div class="control-group">
        	<div class="controls">
		        <%= password_field_tag  :password_confrimation, params[:password_confirmation],  class: "input-block-level", placeholder: "确认密码", "data-validation-match-match" => "password", "data-validation-match-message" => "两次密码不一致" %>
    		    <p class="help-block"></p>
          </div>
        </div>
        <%= submit_tag "注册", class: "btn btn-info"%>
      <% end %>
</div>

