<% @categories.each do |category|%>
  <li >
    <%= link_to category_path(category), remote: true,  class: " categories-list" do %>
      <i class="icon-folder-open"></i> <%= category.title%><!--<i class="pull-right icon-remove"></i>-->
      <%= link_to category_path(category), class: "category-remove pull-left", remote: true, method: :delete do %>
        <i class="icon-remove"></i>
      <% end %>
    <% end %> 
  </li>
<% end %>

