<div class="row-fluid">
  <div class="span3">
 	  <!-- Left  -->
  	<div class="left">            	
      <ul class="nav   nav-tabs nav-stacked">
        <li class="head">
          <div>
            <img data-src="holder.js/300x200"  src="<%= image_path("head.png")%>" class="img-polaroid">
          </div>
        </li>
        <li>
          <%= link_to  home_path do  %>
            <i class="icon-home"></i> &nbsp;主页
          <% end %>
        </li>
        <li>
          <%= link_to star_path, remote: true do%>
            <i class="icon-inbox"></i>  &nbsp;归档
          <% end %>
        </li>                    
        <li>
          <%= link_to favorite_path, remote: true do%>
            <i class="icon-star"></i>  &nbsp;喜欢
          <% end %>
        </li>  
        <li class="divider"></li>
        <li class="nav-header">收藏夹</li>
        <% categories.each do |category|%>
          <li><%= link_to "<i class='icon-folder-open'></i>#{category.title}<i class='pull-right icon-remove'></i>", class: "icon-folder-open" %></li>
        <% end %>
        <li><a data-toggle="modal" href="#myModal"><i class="icon-plus"></i>  &nbsp;创建收藏夹</a></li>          
        <li class="divider"></li>
        <li class="nav-header">标签</li>                              
      </ul>
    </div>
    <!-- left END -->
  </div>
  <div class="span6">
    <!-- center  -->  
    <div class="center">
      <ul class="bookmark-list media-list">
        <% bookmarks.each do |bookmark|%>
        <li class="media bookmark-item selected">
          <input type="hidden" value="1" id="id">
          <div class="media-body">
          <h4 class=" media-heading"><%= bookmark.title%></h4>
          <%= link_to bookmark.link, "http://#{bookmark.link}" %>
          <a href="#" title="喜欢" class="star"><i id="star-icon" class="icon-star icon-white"></i></a>
          <a href="#" title="添加标签"   class="tag-button"><i class="icon-tags"></i></a>
          <ul class="has_tags pull-right">
            <% bookmark.tag_list.each do |tag|%>
              <li><%= link_to tag,  home_tag_path(tag),  class: "tag-background" %></li>
            <% end %>
          </ul>                             
          </br></br>              
          <div class="add-tags">
            <div class="row">
              <div class="span10">
                <ul id="myTags" class="pull-right">
                  <% bookmark.tag_list.each do |tag|%>
                  <li><%= tag %></li>
                  <% end %>
                </ul>
              </div>
              <div class="span2">
                <!--<a class="btn" id="tag-save">保存</a>-->
              </div>								
            </div>
          </div>                
        </div>
        </li> 
        <% end %>
      </ul>
    </div>
    <!-- center END -->
  </div>
  <div class="span3 ">
    <!-- right -->
    <div class="right">
      <h4> Ruby China</h4>
      <img src="" />
      <p class="description">
                Ruby China，对！没错！这里就是 Ruby 社区，目前这里已经是国内最权威的 Ruby 社区，
      </p>
      <form>
        <textarea class="bookmark_note" placeholder="还没有笔记呢..." ></textarea>
      </form>
      <ul id="twoTags">
        <li>rails</li>
      </ul>                
    </div>
    <!-- right END -->
  </div>        
</div>


<!-- Alert -->
<div class="modal fade" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>创建收藏夹</h3>
  </div>
  <div class="modal-body">
    <p>收藏夹标题</p>
    <form>
    	<input type="text" name="favorite" class="favorite"/>
    </form>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">关闭</a>
    <a href="#" class="btn btn-primary">保存</a>
  </div>
</div>

<div class="modal fade" id="add-mark">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>添加书签</h3>
  </div>
  <div class="modal-body">
    <div class="input-prepend input-append">
    	<span class="add-on">http://</span><input class="span4" id="prependedInput" size="16" type="text"><button class="btn" type="button" id="add-bookmark" >添加</button>
	</div>
  </div>
</div>
<!-- Alert END-->


