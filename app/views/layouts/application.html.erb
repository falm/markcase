<!DOCTYPE html>
<html>
<head>
  <title>Markcase</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %>">
<!-- Navbar  -->
<div class="navbar navbar-inverse  navbar-fixed-top">
	<div class="navbar-inner">
    <div class="nav-align">
    	<div class="container" style="width:auto;">
        <!-- Navbar Logo -->
        <a class="brand" href="#">电影推荐网站</a>
        <!-- Navbar link -->
        <ul class="nav">
          <li class="active">
            <%= link_to '首页', root_path %>
          </li>
          <% if controller_name == 'users'%>
            <li><a href="#add-mark" data-toggle="modal">添加电影书签</a></li>
          <% end %>
        </ul>
        <!-- Navbar link END-->
        <!-- User Info -->
        <ul class="nav pull-right">
          <% unless current_user %>
            <li>
              <a name="relink" data-toggle="modal" href="#register">注册</a>
            </li>
            <li class="dropdown">
              <a  name="link" data-toggle="modal" href="#login">登陆</a>
            </li>
          <% else %>
            <li class="dropdown">
              <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
              <!--<i class="icon-user icon-white"></i>-->
                <%= image_tag avatar_url(current_user, 20)%>
                <%= current_user.username %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to '主页', home_path %></li>
                <li><%= link_to '个人设置', settings_path %></li>
                <li class="divider"></li>
                <li><%= link_to '退出', session_path(current_user), method: :delete %></li>
              </ul>
            </li>            
          <% end %>
        </ul>     
        <!-- User Info END -->       
        </div>    
  </div>
    </div>
</div>
<!-- Navbar END -->

<div class="body">
  <% if flash[:error] %>
  <div class="alert alert-error">
    <button type="button" data-dismiss="alert" class="close">&times;</button>
    <h5><%= flash[:error] %></h5>
  </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" data-dismiss="alert" class="close">&times;</button>
      <h5><%= flash[:notice] %></h5>
    </div>
  <% end %>
  <%= yield %>
</div>

<div id="footer">

  <div class="container">

    <p class="muted credit">&copy;2015 Markcase powered by  <a href="https://github.com/falm">falm</a> .</p>
  </div>

</div>
</body>
</html>
