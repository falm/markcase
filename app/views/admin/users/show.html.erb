                  <%= f.label "链接" %>
                  <%= f.text_field :link %>
						    </fieldset>
						    <fieldset style="width:48%; float:left; margin-right: 3%;">
							    <%= f.label "收藏夹"%> 
							    <% categories_array = categories.map { |c| [c.title,c.id] } %>
							    <%= f.select :category_id,options_for_select(categories_array)%>
						    </fieldset>
						    <fieldset style="width:48%; float:left;"> 
							    <%= f.label "标签"%>
