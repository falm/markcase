                    <% bookmark.tag_list.each do |tag| %>
                      <li><%= tag %></li>
                    <% end %>
                  </ul>
						    </fieldset><div class="clear"></div>
				    </div>
			    <footer>
				    <div class="submit_link">
              <%= f.submit "提交", class: "alt_btn"%>
              <%= f.submit 'Reset'%>
				    </div>
			    </footer>
          <% end %>          
        </article><!-- end of edit user information -->       
