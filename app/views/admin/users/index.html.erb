<article class="module width_3_quarter">
  <header><h3 class="tabs_involved">用户管理</h3></header>
    <div class="tab_container">
      <div id="tab1" class="tab_content">
  <table class="tablesorter display" cellspacing="0" id="users">
    <thead>
      <tr>
        <td>用户名</td>
        <td>邮箱地址</td>
        <td>最后登录时间</td>
        <td>操作</td>
        <td>操作</td>
        <td>操作</td>
      </tr>
    </thead>
    <tbody>
     <% users.each do |user|%> 
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to "显示", admin_user_path(user) %></td>
        <td><%= link_to "编辑", edit_admin_user_path(user) %></td>
        <td><%= link_to "删除", admin_user_path(user), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</article><!-- end of content manager article -->
