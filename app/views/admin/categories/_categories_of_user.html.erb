<table class="tablesorter display" cellspacing="0" >
  <thead>
    <tr>
          <th>收藏夹名</th>
          <th>操作</th>
        </tr>
       </thead>
  <tbody>
    <% @categories.each do |category|%> 
      <tr>
        <td><%= link_to category.title, admin_user_category_path(user,category)%></td>
        <td>
        <%= link_to image_tag("admin/icn_edit.png"), edit_admin_user_category_path(user,category), title: "编辑"%>
          
        <%= link_to image_tag("admin/icn_trash.png"), admin_user_category_path(user,category), method: :delete, title: "删除" %>
        </td>
       </tr>
     <% end %>
  </tbody>
</table>
<div class="flickr_pagination">  
  <%= will_paginate @categories %>  
</div> 
